<div class='top'>
    <h1>Track Your Burger Wishlist!</h1>

    <img src='/assets/img/burger.png' class='burgerImg'></img>
</div>

<div class='flex-container'>
    <div class='sections undevoured'>
        <h2>Plan to devour:</h2>
        <ol>
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block devoured=false}}
            {{/unless}}
            {{/each}}
        </ol>
    </div>

    <div class='sections devoured'>
        <h2>Already devoured:</h2>
        <ol>
            {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burger-block devoured=true}}
            {{/if}}
            {{/each}}
        </ol>
    </div>

    <div class='sections add'>
        <h2>Add a new burger to the plan:</h2>
        <form id="create-form">

            <div class="form-group">
                <label for="bur">Burger name:</label>
                <input type="text" id="bur" name="burger">
                <button type="submit">Add burger</button>
            </div>

            {{!-- <button type="submit">Add burger</button> --}}
        </form>
    </div>
</div>