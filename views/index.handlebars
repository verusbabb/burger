<h1>Burgers!</h1>

<h2>On my list to devour</h2>
<ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block devoured=false}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Already devoured</h2>
<ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block devoured=true}}
    {{/if}}
    {{/each}}
</ul>


<h2>Add a burger</h2>
<form id="create-form">

    <div class="form-group">
        <label for="bur">Burger name:</label>
        <input type="text" id="bur" name="burger">
    </div>

    <button type="submit">Add burger</button>
</form>